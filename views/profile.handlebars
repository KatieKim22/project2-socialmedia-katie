<div class="container">
    <div class="row">
        <div class="col-small-4">
            <div class="card" style="width: 18rem;">
                {{!-- save image seperately, not in user sql db --}}
                {{!-- <img src="{{image}}" class="card-img-top"> --}}
                <div class="card-body">
                    {{!-- <h5 class="card-title">{{user.dataValues.firstname}} {{user.dataValues.lastname}}</h5> --}}
                </div>
            </div>
        </div>
    </div>
    {{!-- update status button --}}
    <form class="form-inline my-2 my-lg-0">
        <a href="/post" class="btn btn-primary registerBtn">Update Status</a>
    </form>

    {{!-- status history cards --}}
    <div class="mainPosts">

        {{#each status}}
        <a href="/api/post/{{this.dataValues.id}}">
            <div class="card">
                <div class="card-header">
                    <h5>{{this.dataValues.title}}</h5>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{this.dataValues.text}}</p>
                        <footer class="blockquote-footer">{{this.dataValues.date_created}}
                            {{this.dataValues.user_id}}
                        </footer>
                    </blockquote>
                </div>
            </div>
        </a>
        {{else}}
         <h2>There is no post</h2>
        {{/each}}
    </div>