<form action="api/profile" method="POST">

    <div class="card">
        <h5 class="card-header">What's in your mind?</h5>

        <div class="card-body">
            <div class="form-group">
                <label for="title" id="title" name="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Title of your content">
            </div>
            <div class="form-group">
                <label for="text">Content</label>
                <textarea required name="text" id="text" cols="30" rows="10" class="form-control d-inline"></textarea>
            </div>
            <a href="api/profile" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>

</form>